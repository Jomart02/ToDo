/* QScrollBar  */
/* ---------------------------------------------------------------------------------------------------- */
QScrollBar:vertical,
QScrollBar:horizontal {
    background-color: #FDFDFD;                  
    width: 15px;          
    margin: 15px 0px 15px 0px;                   
    border-color: #A4009BCC;             
    border-radius: 5px;                          
}
QScrollBar::handle:vertical,
QScrollBar::handle:horizontal {
    background-color: #A4009BCC;          
    min-height: 10px;                            
    border-radius: 5px;                          
}
QScrollBar::handle:hover:vertical,
QScrollBar::handle:hover:horizontal {
    background-color: #370A8DC1; 
}
/* дефолт для стрелки вверх*/
QScrollBar::sub-line:vertical,
QScrollBar::sub-line:horizontal {
    margin: 3px 0px 3px 0px;
    border-image:url(:/style/arrow1);                      
    height: 15px;
    width: 15px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}
/* дефолт для стрелки ввниз*/
QScrollBar::add-line:vertical,
QScrollBar::add-line:horizontal {
    margin: 3px 0px 3px 0px;
    border-image: url(:/style/arrow);              
    height: 15px;
    width: 15px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical:hover,QScrollBar::sub-line:vertical:on {        
	background-color: #370A8DC1;
    border-color: #A4009BCC;
	border-radius: 5px;
    height: 15px;
    width: 15px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}
QScrollBar::add-line:vertical:hover, QScrollBar::add-line:vertical:on {
	background-color: #370A8DC1;
    border-color: #A4009BCC;  
	border-radius: 5px;
    height: 15px;
    width: 15px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}
QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
    background: none;
}
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}
QScrollBar::disabled {
	color: #8787878C;
	border-color: #8787878C;

}


