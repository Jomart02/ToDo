/* Global QWidget Settings  */
/* ---------------------------------------------------------------------------------------------------- */

/*hover*/
QWidget {
    background-color: #FFFFFF;
    color: #222;

}
/* здесь менять текст */
QWidget::disabled {
    background-color: #FFFFFF;
    color: #8787878C;
	
}
/* =============================================== */
/* TabWidget  -- менять                            */
/* =============================================== */

QTabWidget::pane{
    border: 2px solid #22026C8E;
    top: -0.03em;
    padding-top: 0.5em;
}

QTabBar::tab {
	height: 20;
	width: 55;
    padding: 3px 5px;    
	border: 2px solid #22026C8E;
    color: #222;
    
}

QTabBar::tab:hover {
    background: #3400CCCC;
    border-color: #22026C8E;
}

QTabBar::tab:selected {
    background: #3400CCCC;
    border-color: #22026C8E;
}
QTabBar::tab:pressed {
    background: #370A8DC1;
    border-color: #22026C8E;
}

QTabWidget::tab-bar {
    alignment: center;
}

QTabBar::tab:top{
    margin-top: 0px;
    border-bottom: #22026C8E;

	border-left: none;
	border-right: none;
}

QTabBar::tab:last{
	border-top-right-radius: 10px;
	border-right: 2px solid #22026C8E;
    margin-right:2px;
}

QTabBar::tab:first{
	border-top-left-radius: 10px;
	border-left: 2px solid #22026C8E;
    margin-left:2px;
}

